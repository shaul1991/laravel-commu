# ==========================================
# 프로덕션 환경 변수 템플릿
# 실제 서버에서 .env.prod 파일로 복사하여 사용
# ==========================================

# 애플리케이션
APP_NAME="Laravel Commu"
APP_ENV=production
APP_KEY=
APP_DEBUG=false
APP_URL=https://blogs.shaul.link

# 데이터베이스 (홈서버 내부 연결)
DB_HOST=192.168.0.26
DB_PORT=5432
DB_DATABASE=laravel
DB_USERNAME=postgres
DB_PASSWORD=your_secure_password

# Redis (홈서버 내부 연결)
REDIS_HOST=192.168.0.26
REDIS_PORT=6379
REDIS_PASSWORD=null

# 캐시/세션/큐
CACHE_DRIVER=redis
SESSION_DRIVER=redis
QUEUE_CONNECTION=redis

# 로깅
LOG_CHANNEL=stack
LOG_LEVEL=error

# 네트워크
NETWORK_NAME=laravel_network

# OAuth - GitHub
GITHUB_CLIENT_ID=
GITHUB_CLIENT_SECRET=
GITHUB_REDIRECT_URI="${APP_URL}/api/auth/oauth/github/callback"

# OAuth - Google
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=
GOOGLE_REDIRECT_URI="${APP_URL}/api/auth/oauth/google/callback"
