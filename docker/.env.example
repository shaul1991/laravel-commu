# ==========================================
# Docker Compose 설정
# ==========================================
COMPOSE_PROJECT_NAME=laravel
NETWORK_NAME=laravel_network

# ==========================================
# Nginx
# ==========================================
NGINX_VERSION=alpine
NGINX_PORT=80

# ==========================================
# WAS (PHP-FPM)
# ==========================================
APP_ENV=local
WAS_PORT=9002

# Xdebug 모드: off, debug, develop, coverage
XDEBUG_MODE=off

# ==========================================
# PostgreSQL
# ==========================================
POSTGRES_VERSION=18-alpine
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres
POSTGRES_DB=laravel
POSTGRES_PORT=5432

# ==========================================
# Redis
# ==========================================
REDIS_VERSION=8-alpine
REDIS_PORT=6379
# Redis 클라이언트: predis (기본, pure PHP) | phpredis (고성능, ext-redis 필요)
# REDIS_CLIENT=predis

# ==========================================
# MongoDB
# ==========================================
MONGODB_VERSION=8
MONGODB_ROOT_USERNAME=root
MONGODB_ROOT_PASSWORD=root
MONGODB_PORT=27017

# ==========================================
# MinIO
# ==========================================
MINIO_VERSION=latest
MINIO_ROOT_USER=minioadmin
MINIO_ROOT_PASSWORD=minioadmin
MINIO_API_PORT=9000
MINIO_CONSOLE_PORT=9001
